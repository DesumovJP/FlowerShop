{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "cardType": {
      "type": "enumeration",
      "default": "standart",
      "enum": [
        "standart",
        "large"
      ]
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "chervonij",
        "rozhevyj",
        "bilyj",
        "zhyovtyj ",
        "fioletovij ",
        "oranzhevyj",
        "synij",
        "zelenyj",
        "kremovyj",
        "bordovyj",
        "miks",
        "golubyj"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "productType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "bouquet",
        "singleflower",
        "else"
      ]
    },
    "varieties": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::variety.variety",
      "inversedBy": "products"
    },
    "availableQuantity": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  }
}
